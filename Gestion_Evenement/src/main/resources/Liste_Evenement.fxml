<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="535.0" prefWidth="798.0" xmlns="http://javafx.com/javafx/21" stylesheets="@Design.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controllers.AfficherEvents">
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 10px;">
            <ImageView fitHeight="19.0" fitWidth="18.0">
                <image>
                    <Image url="@../java/edu/esprit/image/rendez-vous.png" />
                </image>
            </ImageView>
            <Button fx:id="calendarButton" onAction="#handleCalendarButton" prefHeight="36.0" prefWidth="110.0" style="-fx-font-family: 'DM Sans'; -fx-font-size: 16px; -fx-text-fill: #2b9a8e;  -fx-background-color: transparent; -fx-background-radius: 5px; -fx-padding: 7px 16px;" text="Calendrier" />
            <VBox>
                <Label prefHeight="30.0" prefWidth="598.0" style="-fx-font-size: 18px;" text="Liste des événements" textFill="#000044" />
            </VBox>
        </HBox>
    </top>

    <left>
        <VBox fx:id="navBar" prefHeight="495.0" prefWidth="162.0" spacing="10">
            <Label styleClass="navTitle" text="Auto+Learn" textFill="#fffdfd">
                <font>
                    <Font name="DM Sans" size="22.0" />
                </font>
            </Label>
            <Button text="Accueil" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Utilisateurs" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Documents" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Événements" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Messagerie" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Réservations" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
            <Button text="Profil" style="-fx-background-color: transparent; -fx-text-fill: white;" />



        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="ALWAYS" vbarPolicy="NEVER">
            <content>
                <VBox fx:id="eventBox" alignment="CENTER" prefWidth="630.0" BorderPane.alignment="CENTER">

                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <Button onAction="#handleRetour" prefHeight="39.0" prefWidth="151.0" style="-fx-background-color: white; -fx-text-fill:turquoise;-fx-background-radius: 5px; -fx-border-color: turquoise;-fx-padding: 10px 20px;" text="Retour" />
        </HBox>
    </bottom>
</BorderPane>
